#--------------- HUBOT CONFIG --------------

<% unless @env.nil? or @env.empty? %>
  <% @env.each do |var,value| %>
    <% if value.class == String %>
export <%= var -%>="<%= value -%>"
    <% elsif value.class == Array %>
export <%= var -%>="<%= value.join(',') -%>"
    <% end %>
	<% end %>
<% end %>

